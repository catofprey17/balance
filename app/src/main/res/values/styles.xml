<resources>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
<!--        <item name="android:textColorSecondary">@color/colorOnBackground</item>&ndash;&gt;-->

                <item name="background">@color/colorBackground</item>
<!--                <item name="background">@color/colorFocusBack</item>-->
        <item name="colorSurface">@color/colorSurface</item>
<!--        <item name="colorSurface">@color/colorFocusBack</item>-->
        <item name="colorError">@color/colorError</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnError">@color/colorOnError</item>

<!--        <item name="colorControlNormal">@color/colorOnPrimary</item>-->

        <item name="android:windowActivityTransitions">true</item>

        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>

        <item name="bottomAppBarStyle">@style/CustomBottomAppBar</item>

        <item name="floatingActionButtonStyle">@style/CustomFAB</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!--    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

<!--        <item name="android:windowContentTransitions">true</item>-->
    </style>

    <style name="AppTheme.HasActionBar">
<!--        <item name="android:textColorPrimary">@color/colorOnPrimary</item>-->
        <item name="textInputStyle">@style/CustomTextInputLayoutStyle</item>
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
    </style>

    <style name="CustomBottomAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="colorControlNormal">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
    </style>

    <style name="SettingsTheme">
        <item name="android:textColorSecondary">@color/textSummaryColor</item>
    </style>
    
    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
<!--        <item name="android:textColorSecondary">@color/colorOnPrimary</item>-->
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
<!--        <item name="tint">@color/colorOnPrimary</item>-->
    </style>


    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
<!--        <item name="cardBackgroundColor">@android:color/white</item>-->
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>
    
    <style name="CustomFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorOnPrimary</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="hintTextColor">@color/colorOnSurface</item>
        <item name="boxStrokeColor">@color/colorPrimaryVariant</item>
    </style>


    <style name="CardView.DayNight" parent="CardView.Light"/>

    <style name="TextAppearance" parent="TextAppearance.AppCompat"/>
    <style name="TextAppearance.DetailAppbarText">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="TextAppearance.DetailToolbarText">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Style.AddReceipt.Labels" parent="TextAppearance.MaterialComponents.Subtitle1">
<!--    <style name="Style.AddReceipt.Labels" parent="TextAppearance.AppCompat">-->

    </style>

</resources>
